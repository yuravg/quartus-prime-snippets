# -*- mode: snippet -*-
# name: qps-Record-Type-Declaration
# key: qps-Type-and-Subtype-Declarations-Record-Type-Declaration
# --
// Record Type Declaration
type <name> is
	record
		<member_ids> : <subtype_indication>;
		...
	end record;

-- Example
type packet_t is
	record
		address : integer range 0 to 256;
		data	   : std_logic_vector(7 downto 0);
	end record;
